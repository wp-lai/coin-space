{
  "overrides": [
    {
      "files": "**/*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["**/*.js", "**/*.ts"],
      "options": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "tabWidth": 2,
        "useTabs": false
      }
    }
  ]
}
